<h1>Update Post id: <%= @post.id %></h1>
<% if @post.errors.any? %>
  <ul>
    <% @post.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :first_name, class: 'f_name' %>
    <%= form.text_field :first_name %>
  </div>
  <div>
    <%= form.label :last_name, class: "l_name" %>
    <%= form.text_field :last_name %>
  </div>
  <div>
    <%= form.label :email, class: 'email' %>
    <%= form.text_field :email%>
  </div>
  <div>
    <%= form.label :contact_number %>
    <%= form.text_field :contact_number%>
  </div>
  <%= form.submit %>
<% end %>

<%= link_to 'Index', posts_path %>
